pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '''
                docker build -t 52pbailey/task1 .
                '''
            }

        }
        stage('Push') {
            steps {
                sh '''
                docker push 52pbailey/task1
                '''
            }

        }
        stage('Deploy') {
            steps {
                sh '''
                docker pull 52pbailey/task1
                kubectl apply -f .
                kubectl get services
                '''
            }

        }

    }

}