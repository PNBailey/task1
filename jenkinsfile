pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '''
                docker build -t 52pbailey/task1 .
                '''
            }

        }
        stage('Push') {
            steps {
                sh '''
                docker push 52pbailey/task1
                '''
            }

        }
        stage('Deploy') {
            steps {
                sh '''
                docker stop task1
                docker rm task1
                docker run -d -p 80:5500 --name task1 52pbailey/task1
                '''
            }

        }

    }

}